<div class="row my-5">
    <div class="col">
        <!--
        <h1 class="text-center">홈페이지 입니다....</h1>
        -->
        <!-- 검색 폼-->
        <div class="row mb-2 justify-content-end">
            <form name="frm1" class="col-6 col-md-4 col-lg-3">
                <div class="input-group">
                    <input name="query" class="form-control" value="자바">
                    <button class="btn btn-primary"> 검색 </button>
                </div>
            </form>
        </div>
        
        <!-- 도서 검색 결과 출력-->
        <div id="div_books" class="row"> </div>
        <!-- 페이지 이동버튼-->
        <div class="text-center">
            <button id="prev" class="btn btn-primary">이전</button>
            <span id="span_page" class="mx-3">1/10</span>
            <button id="next" class="btn btn-primary">다음</button>
        </div>
    </div>
</div>

<!--도서검색 템플릿
  {{}} 핸들바 명령문-->
<script type="x-handlebars-template" id="temp_books">
    {{#each documents}}
        <div class="col-6 col-md-4 col-lg-2 mb-3">
            <div class = "card">
                <div class="card-body">
                    <img src="{{check thumbnail}}" width="90%">
                    <div class="mt-2 ellipsis" style="font-size:0.8rem;"> {{title}} </div>
                    <div class="card-footer"> {{fmt price}} </div>
                </div>
            </div>
        </div>
    {{/each}}
</script>
<script>
    Handlebars.registerHelper("check", function(thumbnail){
        if(thumbnail){
            return thumbnail;
        }else{
            return "http://via.placeholder.com/120x170";
        }
    });

    Handlebars.registerHelper("fmt", function(price){
        return price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',') + '원'; 
    });
</script>


<script>
    //frm에 query값 가져오기
    let searchQuery = $(frm1.query).val();
    let page = 1;
    getBook();

    $(frm1).on("submit", function(event){
        event.preventDefault();
        // searchQuery 값 다시 가져오기
        searchQuery = $(frm1.query).val(); 
        page = 1;
        getBook();
    });

    //다음 버튼을 클릭한 경우
    $("#next").on("click", function(){
        page++;
        getBook();
    });

    //이전 버튼을 클릭한 경우
    $("#prev").on("click",function(){
        page--;
        getBook(); // 'getbook'을 'getBooks'로 수정
    });

    function getBook(){
        $.ajax({
            type:"get",
            url:"https://dapi.kakao.com/v3/search/book?target=title",
            headers:{"Authorization":"KakaoAK f6a81be672c42fe6915eb8f1ef27320c"},
            data:{
                query: searchQuery, page: page, size: 6
            },
            success:function(result){
                console.log(result);
                let temp = Handlebars.compile($("#temp_books").html());
                $("#div_books").html(temp(result));
                let last = Math.ceil(result.meta.pageable_count/6);
                $("#span_page").html(page + "/" + last);

                if(page == 1) $("#prev").attr("disabled", true);
                else $("#prev").attr("disabled", false);
                if(result.meta.is_end) $("#next").attr("disabled", true);
                else $("#next").attr("disabled", false);
            }
        });
    }
</script>